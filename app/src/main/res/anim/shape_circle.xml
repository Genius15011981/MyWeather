<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <gradient
        android:angle="70"
        android:centerColor="#574A7B"
        android:centerX="40"
        android:endColor="#574A7B"
        android:gradientRadius="50dp"
        android:startColor="#574A7B"
        android:type="radial"
        android:useLevel="false" />
    <size
        android:width="60dp"
        android:height="60dp" />

    <stroke
        android:width="1dp"
        android:color="#ACAAB0"
        android:dashWidth="1dp"
        android:dashGap="0dp" />
</shape>