<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="403dp">

    <ImageView
        android:id="@+id/shape"
        android:layout_width="match_parent"
        android:layout_height="403dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/shape_one"
        android:importantForAccessibility="no"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:importantForAccessibility="no"
        android:src="@drawable/line" />

    <include
        layout="@layout/degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp" />

    <TextView
        style="bold|default"
        android:layout_width="111dp"
        android:layout_height="20dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        android:text="@string/hourly_forecast"
        android:textColor="#919198"
        android:textSize="15sp" />

    <TextView
        style="bold|default"
        android:layout_width="111dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="27dp"
        android:text="@string/hourly_forecast"
        android:textColor="#919198"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/book"
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="330dp"
        android:importantForAccessibility="no"
        android:onClick="mainpage"
        android:src="@drawable/book" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="330dp"
        android:importantForAccessibility="no"
        android:onClick="menupage"
        android:src="@drawable/menu_img" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="330dp"
        android:background="@drawable/shape_circle"
        android:importantForAccessibility="no"
        android:onClick="addpage"

        android:src="@drawable/baseline_add_24" />

    <ImageView
        android:onClick="addpage"
        android:id="@id/add"
        android:layout_width="717dp"
        android:layout_height="218dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="242dp"
        android:src="@drawable/ellipse_9" />
</FrameLayout>